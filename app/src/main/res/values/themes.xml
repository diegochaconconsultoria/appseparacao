<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SeparadorPedidos" parent="android:Theme.Material.Light.NoActionBar" />
    <style name="Theme.SeparadorPedidos.NoSplash" parent="Theme.SeparadorPedidos">
        <item name="android:windowBackground">@color/splash_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.SeparadorPedidos.Splash" parent="Theme.SeparadorPedidos">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>